<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:layout_marginLeft="@dimen/dm040"
        android:layout_marginRight="@dimen/dm040"
        android:layout_marginTop="@dimen/dm050"
        android:background="@drawable/backgroud_bg_white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dm026"
            android:layout_height="@dimen/dm042"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dm020"
            android:scaleType="fitXY"
            android:src="@drawable/icon_phone"/>
        <EditText
            android:id="@+id/et_forget_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dm020"
            android:background="@null"
            android:hint="请输入您的手机号"
            android:inputType="number"
            android:textColorHint="@color/colorText"
            android:textSize="@dimen/dm026"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:layout_marginLeft="@dimen/dm040"
        android:layout_marginRight="@dimen/dm040"
        android:layout_marginTop="@dimen/dm016"
        android:background="@drawable/backgroud_bg_white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dm030"
            android:layout_height="@dimen/dm040"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dm020"
            android:scaleType="fitXY"
            android:src="@drawable/icon_yzm"/>
        <EditText
            android:id="@+id/et_forget_yzm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入您的验证码"
            android:inputType="number"
            android:textColorHint="@color/colorText"
            android:textSize="@dimen/dm026"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dm024"
            android:layout_marginTop="@dimen/dm024"
            android:background="@color/gray"/>
        <RelativeLayout
            android:id="@+id/rl_forget_get"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dm025"
            android:layout_marginRight="@dimen/dm025">
            <TextView
                android:id="@+id/tv_forget_yzm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="获取验证码"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/dm026"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:layout_marginLeft="@dimen/dm040"
        android:layout_marginRight="@dimen/dm040"
        android:layout_marginTop="@dimen/dm016"
        android:background="@drawable/backgroud_bg_white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dm030"
            android:layout_height="@dimen/dm040"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dm020"
            android:scaleType="fitXY"
            android:src="@drawable/icon_lock"/>
        <EditText
            android:id="@+id/et_forget_passport"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入新的密码(不少于6位)"
            android:inputType="textPassword"
            android:textColorHint="@color/colorText"
            android:textSize="@dimen/dm026"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:layout_marginLeft="@dimen/dm040"
        android:layout_marginRight="@dimen/dm040"
        android:layout_marginTop="@dimen/dm016"
        android:background="@drawable/backgroud_bg_white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dm030"
            android:layout_height="@dimen/dm040"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dm020"
            android:scaleType="fitXY"
            android:src="@drawable/icon_lock"/>
        <EditText
            android:id="@+id/et_forget_next_passport"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请再次输入密码(不少于6位)"
            android:inputType="textPassword"
            android:textColorHint="@color/colorText"
            android:textSize="@dimen/dm026"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_forget_success"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:layout_marginLeft="@dimen/dm040"
        android:layout_marginRight="@dimen/dm040"
        android:layout_marginTop="@dimen/dm045"
        android:background="@drawable/backgroud_button_app_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/dm034"/>
    </RelativeLayout>
</LinearLayout>
