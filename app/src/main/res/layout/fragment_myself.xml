<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_myself_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="我的"
      />
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm350"
      >
    <RelativeLayout
        android:id="@+id/rl_myself_img"
        android:layout_width="@dimen/dm172"
        android:layout_height="@dimen/dm172"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dm040"
        >
      <ImageView
          android:id="@+id/iv_myself_img"
          android:layout_width="@dimen/dm160"
          android:layout_height="@dimen/dm160"
          android:layout_centerInParent="true"
          android:src="@drawable/advisor_home_img"
          />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_myself_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_myself_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dm010"
        android:text="注册/登陆"
        android:textSize="@dimen/dm028"
        />
    <TextView
        android:id="@+id/tv_myself_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_myself_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dm020"
        android:text="修改头像"
        android:textSize="@dimen/dm028"
        />
  </RelativeLayout>
</LinearLayout>
