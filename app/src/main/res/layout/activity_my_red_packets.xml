<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.baihuodasha.bhds.activity.myself.ActivityMyRedPackets"
    >
  <include layout="@layout/activity_base_title"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:orientation="vertical"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm081"
        android:orientation="horizontal"
        android:weightSum="3"
        >

      <TextView
          android:id="@+id/tv_select_packet_unused"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:text="未使用"
          android:textSize="@dimen/dm028"
          />

      <TextView
          android:id="@+id/tv_select_packet_used"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:text="已使用"
          android:textSize="@dimen/dm028"
          />
      <TextView
          android:id="@+id/tv_select_packet_pastdue"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:text="已失效"
          android:textSize="@dimen/dm028"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        >
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          >
        <TextView
            android:id="@+id/tv_select_packet_unused_lin"
            android:layout_width="@dimen/dm085"
            android:layout_height="@dimen/dm003"
            android:background="@color/titleBar"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          >
        <TextView
            android:id="@+id/tv_select_packet_used_lin"
            android:layout_width="@dimen/dm085"
            android:layout_height="@dimen/dm003"
            android:background="@color/white"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          >
        <TextView
            android:id="@+id/tv_select_packet_pastdue_lin"
            android:layout_width="@dimen/dm085"
            android:layout_height="@dimen/dm003"
            android:background="@color/white"
            />
      </LinearLayout>

    </LinearLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
      <android.support.v7.widget.RecyclerView
          android:id="@+id/rl_red_packet_list"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          ></android.support.v7.widget.RecyclerView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

  </LinearLayout>
  <ImageView
      android:id="@+id/red_packet_backgroud"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@mipmap/red_packet_backgroud"
      android:layout_gravity="center"
      android:layout_marginTop="@dimen/dm200"
      />
</LinearLayout>
