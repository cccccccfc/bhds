<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.baihuodasha.bhds.activity.order.ActivityPaymenResult"
    >
  <include layout="@layout/activity_base_title"/>
  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm020"
      android:background="@color/address_divide"
      />
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <ImageView
        android:id="@+id/iv_paymen_result_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dm024"
        android:src="@mipmap/paymen_result_success"
        />
    <TextView
        android:id="@+id/tv_paymen_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm040"
        android:layout_marginTop="@dimen/dm048"
        android:layout_toRightOf="@+id/iv_paymen_result_success"
        android:text="订单支付成功"
        android:textColor="@color/blackText"
        android:textSize="@dimen/dm036"
        />
    <TextView
        android:id="@+id/tv_paymen_result_Integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_paymen_result_title"
        android:layout_marginLeft="@dimen/dm040"
        android:layout_marginTop="@dimen/dm016"
        android:layout_toRightOf="@+id/iv_paymen_result_success"
        android:text="订单完成后XXXXX"
        android:textColor="@color/colorText2"
        android:textSize="@dimen/dm024"
        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_paymen_result_Integral"
        android:layout_marginBottom="@dimen/dm032"
        android:layout_marginLeft="@dimen/dm040"
        android:layout_marginTop="@dimen/dm010"
        android:layout_toRightOf="@+id/iv_paymen_result_success"
        android:text="您的商品将尽快为您送达！"
        android:textColor="@color/colorText2"
        android:textSize="@dimen/dm024"
        />
  </RelativeLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm020"
      android:background="@color/address_divide"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:orientation="vertical"
      android:paddingBottom="@dimen/dm030"
      android:paddingTop="@dimen/dm010"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm020"

        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dm040"
          android:text="订单编号："
          android:textColor="@color/colorText2"
          android:textSize="@dimen/dm024"
          />
      <TextView
          android:id="@+id/et_payment_number"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dm030"
          android:background="@null"
          android:text="haha"
          android:textColor="@color/colorText2"
          android:textSize="@dimen/dm024"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm020"

        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/dm040"
          android:text="余额支付："
          android:textColor="@color/colorText2"
          android:textSize="@dimen/dm024"
          />
      <TextView
          android:id="@+id/tv_paymen_result_yu"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dm030"
          android:hint="+000"
          android:textColor="@color/colorText2"
          android:textSize="@dimen/dm024"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm020"

        >
      <TextView
          android:id="@+id/tv_payment_fukuan"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/dm040"
          android:text="微信支付："
          android:textColor="@color/colorText2"
          android:textSize="@dimen/dm024"
          />
      <TextView
          android:id="@+id/et_payment_money"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dm030"
          android:hint="-000"
          android:textColor="@color/colorText2"
          android:textSize="@dimen/dm024"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm020"

        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/dm040"
          android:text="收货人："
          android:textColor="@color/colorText2"
          android:textSize="@dimen/dm024"
          />
      <TextView
          android:id="@+id/tv_payment_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dm030"
          android:background="@null"
          android:hint="-000"
          android:textColor="@color/colorText2"
          android:textSize="@dimen/dm024"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm020"

        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/dm040"
          android:text="联系电话："
          android:textColor="@color/colorText2"
          android:textSize="@dimen/dm024"
          />
      <TextView
          android:id="@+id/tv_payment_phone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dm030"
          android:background="@null"
          android:hint="-000"
          android:textColor="@color/colorText2"
          android:textSize="@dimen/dm024"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm020"

        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/dm040"
          android:text="收货地址："
          android:textColor="@color/colorText2"
          android:textSize="@dimen/dm024"
          />
      <TextView
          android:id="@+id/tv_payment_deliveryaddress"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dm030"
          android:background="@null"
          android:hint="-000"
          android:textColor="@color/colorText2"
          android:textSize="@dimen/dm024"
          />
    </LinearLayout>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:weightSum="2"
      >
    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/cb_payment_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:layout_marginLeft="@dimen/dm030"
        android:layout_marginRight="@dimen/dm020"
        android:layout_marginTop="@dimen/dm040"
        android:background="@drawable/backgroud_bg_golden"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:text="返回首页"
          android:textColor="@color/titleBar"
          android:textSize="@dimen/dm034"
          />
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/cb_payment_cnfrim"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm030"
        android:layout_marginTop="@dimen/dm040"
        android:background="@drawable/backgroud_button_app_color"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:text="查看订单"
          android:textColor="@color/white"
          android:textSize="@dimen/dm034"
          />
    </RelativeLayout>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/dm022"
      android:layout_marginTop="@dimen/dm040"
      android:gravity="center"
      android:orientation="horizontal"
      >
    <TextView
        android:layout_width="@dimen/dm150"
        android:layout_height="@dimen/dm001"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dm016"
        android:background="@color/itemback"
        />
    <TextView
        android:id="@+id/item_tx_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:text="为您推荐更多精彩商品"
        android:textColor="@color/colorText"
        android:textSize="@dimen/dm022"
        />
    <TextView
        android:layout_width="@dimen/dm150"
        android:layout_height="@dimen/dm001"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/dm016"
        android:background="@color/itemback"
        />
  </LinearLayout>
  <android.support.v7.widget.RecyclerView
      android:id="@+id/rec_bhds_choiceness"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="@dimen/dm010"
      android:layout_marginRight="@dimen/dm010"
      android:overScrollMode="never"
      android:scrollbars="none"
      ></android.support.v7.widget.RecyclerView>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm016"
      android:background="#EEEEEE"
      />
</LinearLayout>
