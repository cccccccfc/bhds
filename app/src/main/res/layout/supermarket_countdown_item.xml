<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
  <ImageView
      android:id="@+id/img_supermarket_countdown"
      android:layout_width="@dimen/dm180"
      android:layout_height="@dimen/dm160"
      android:background="@mipmap/img_time"
      android:layout_marginBottom="@dimen/dm010"
      android:layout_marginLeft="@dimen/dm010"
      />
  <TextView
      android:id="@+id/txe_supermarket_countdown"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="@dimen/dm024"
      android:text=""
      android:textColor="@color/price"
      android:layout_marginRight="@dimen/dm016"
      android:layout_marginBottom="@dimen/dm016"
      android:layout_alignRight= "@+id/img_supermarket_countdown"
      android:layout_alignBottom="@+id/img_supermarket_countdown"
      />

</RelativeLayout>