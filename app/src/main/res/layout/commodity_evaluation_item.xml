<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    >
  <TextView
      android:id="@+id/tv_f1"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm016"
      android:background="@color/divide_color"
      />
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dm016"
      >
    <ImageView
        android:id="@+id/iv_commodity_evaluation_image"
        android:layout_width="@dimen/dm124"
        android:layout_height="@dimen/dm124"
        />
    <TextView
        android:id="@+id/tv_commodity_evaluation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm016"
        android:layout_toRightOf="@+id/iv_commodity_evaluation_image"
        android:text="22222"
        android:textColor="@color/colorText2"
        android:textSize="@dimen/dm026"
        />
    <TextView
        android:id="@+id/tv_commodity_evaluation_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_commodity_evaluation_title"
        android:layout_marginLeft="@dimen/dm016"
        android:layout_marginTop="@dimen/dm012"
        android:layout_toRightOf="@+id/iv_commodity_evaluation_image"
        android:text="2222222222"
        android:textColor="@color/colorText"
        android:textSize="@dimen/dm024"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_commodity_evaluation_label"
        android:layout_marginLeft="@dimen/dm016"
        android:layout_marginTop="@dimen/dm016"
        android:layout_toRightOf="@+id/iv_commodity_evaluation_image"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="评分："
          android:textSize="@dimen/dm028"
          />

      <RatingBar
          android:id="@+id/iv_commodity_evaluation_ratingbar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:numStars="5"
          android:rating="4"
          android:stepSize="1"
          style="@style/mRatingBar"
          />

    </LinearLayout>
  </RelativeLayout>
  <EditText
      android:id="@+id/tet_commodity_evaluation_text"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm192"
      android:layout_marginLeft="@dimen/dm022"
      android:layout_marginRight="@dimen/dm022"
      android:layout_marginTop="@dimen/dm010"
      android:background="#f6f6f6"
      android:gravity="top"
      android:hint="默认评价"
      android:paddingLeft="@dimen/dm020"
      android:paddingTop="@dimen/dm010"
      android:textSize="@dimen/dm022"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/dm030"
      android:layout_marginRight="@dimen/dm040"
      android:layout_marginTop="@dimen/dm040"
      android:orientation="horizontal"
      >
    <CheckBox
        android:id="@+id/ck_commodity_evaluation_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/check_evaluation_bg"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"

        >
    </CheckBox>
    <TextView
        android:layout_width="@dimen/dm200"
        android:layout_height="@dimen/dm050"
        android:layout_marginLeft="@dimen/dm016"
        android:text="匿名评论"
        android:textColor="@color/colorText"
        android:textSize="@dimen/dm028"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/dm030"
      android:layout_marginLeft="@dimen/dm016"
      android:layout_marginRight="@dimen/dm016"
      android:layout_marginTop="@dimen/dm016"
      >
    <com.baihuodasha.bhds.utils.MyGridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="@dimen/dm004"
        android:numColumns="4"
        android:verticalSpacing="@dimen/dm004"
        />
  </LinearLayout>
</LinearLayout>