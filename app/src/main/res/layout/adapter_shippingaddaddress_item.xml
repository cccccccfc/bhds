<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_shippingaddress_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="某某"
            android:maxEms="6"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/dm028"
            android:textColor="@color/blackText"
            android:layout_marginLeft="@dimen/dm030"
            android:layout_marginTop="@dimen/dm030"/>
        <TextView
            android:id="@+id/tv_shippingaddress_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1333333333"
            android:layout_toRightOf="@id/tv_shippingaddress_name"
            android:textSize="@dimen/dm028"
            android:textColor="@color/blackText"
            android:layout_marginLeft="@dimen/dm060"
            android:layout_marginTop="@dimen/dm030"/>
        <TextView
            android:id="@+id/tv_shippingaddress_address"
            android:layout_alignLeft="@+id/tv_shippingaddress_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_shippingaddress_name"
            android:text="dasdasdasdasdasdasdasdasdasdaasdasdasdasds"
            android:textColor="@color/colorText2"
            android:textSize="@dimen/dm024"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dm024"
            android:layout_marginRight="@dimen/dm036"/>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Address_color"
            android:layout_marginTop="@dimen/dm030"
            android:layout_below="@id/tv_shippingaddress_address"
            android:layout_marginLeft="@dimen/dm030"
            />
        <TextView
            android:id="@+id/tv_shippingaddress_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm030"
            android:text="默认地址"
            android:textSize="13sp"
            android:textColor="@color/titleBar"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/view"
            android:paddingTop="@dimen/dm023"
            android:paddingBottom="@dimen/dm023"
            />

        <TextView
            android:id="@+id/tv_shippingaddress_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textSize="13sp"
            android:textColor="#999999"
            android:layout_alignParentRight="true"
            android:layout_below="@id/view"
            android:layout_marginRight="12dp"
            android:paddingTop="@dimen/dm023"
            android:paddingBottom="@dimen/dm023"
            android:drawableLeft="@mipmap/search_delete"
            android:drawablePadding="@dimen/dm014"/>

        <TextView
            android:id="@+id/tv_shippingaddress_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_shippingaddress_del"
            android:text="编辑"
            android:textSize="13sp"
            android:textColor="#999999"
            android:layout_below="@id/view"
            android:layout_marginRight="24dp"
            android:paddingTop="@dimen/dm023"
            android:paddingBottom="@dimen/dm023"
            android:drawableLeft="@mipmap/search_delete"
            android:drawablePadding="@dimen/dm014"/>
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm020"
        android:background="@color/address_divide"/>

</LinearLayout>