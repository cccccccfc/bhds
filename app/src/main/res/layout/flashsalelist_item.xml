<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/dm005"
    >


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm280"
      android:layout_marginRight="@dimen/dm010"
      >
    <ImageView
        android:id="@+id/recommendatio_image"
        android:layout_width="@dimen/dm280"
        android:layout_height="@dimen/dm280"
        android:layout_marginLeft="@dimen/dm016"
        android:background="@mipmap/image1"
        />
    <TextView
        android:id="@+id/recommendatio_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_toRightOf="@+id/recommendatio_image"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="11111111111"
        android:textColor="@color/black"
        android:textSize="@dimen/dm028"
        />
    <TextView
        android:id="@+id/recommendatio_text_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/recommendatio_text_title"
        android:layout_below="@+id/recommendatio_text_title"
        android:layout_marginTop="@dimen/dm020"
        android:ellipsize="end"
        android:maxEms="7"
        android:maxLines="1"
        android:text="11111111111"
        android:textColor="@color/blackText"
        android:textSize="@dimen/dm024"
        />
    <TextView
        android:id="@+id/recommendatio_text_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/recommendatio_text_title"
        android:layout_marginRight="@dimen/dm020"
        android:layout_marginTop="@dimen/dm020"
        android:text="剩余100件"
        android:textColor="@color/colorText2"
        android:textSize="@dimen/dm020"
        />
    <ProgressBar
        android:id="@+id/recommendatio_progressbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm012"
        android:layout_alignStart="@+id/recommendatio_text_title"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/dm020"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/progressbar"
        android:secondaryProgress="100"
        style="?android:attr/progressBarStyleHorizontal"
        />
    <!--
      android:layout_above="@+id/recommendatio_text_price"
    -->
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="原价¥"
        android:textColor="@color/colorText"
        android:textSize="@dimen/dm024"
        android:layout_above="@+id/recommendatio_text_price"
        android:layout_alignStart="@+id/recommendatio_text_price"
        />

    <TextView
        android:id="@+id/recommendatio_text_oldprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recommendatio_text_price"
        android:text="2222"
        android:layout_toRightOf="@+id/text"
        android:textColor="@color/colorText"
        android:textSize="@dimen/dm024"
        />
    <TextView
        android:id="@+id/recommendatio_text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dm016"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_toRightOf="@+id/recommendatio_image"
        android:text="222222"
        android:textColor="@color/price"
        android:textSize="@dimen/dm042"
        />

    <TextView
        android:id="@+id/recommendatio_text_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dm020"
        android:layout_marginRight="@dimen/dm014"
        android:background="@drawable/falshsalelist_item_selector"
        android:paddingBottom="@dimen/dm005"
        android:paddingLeft="@dimen/dm010"
        android:paddingRight="@dimen/dm010"
        android:paddingTop="@dimen/dm005"
        android:text="立即购买"
        android:textColor="@color/white"
        android:textSize="@dimen/dm028"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm002"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_toRightOf="@+id/recommendatio_image"
        android:background="#EEEEEE"
        />
  </RelativeLayout>
</LinearLayout>