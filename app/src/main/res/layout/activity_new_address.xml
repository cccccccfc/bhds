<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/address_divide"
    tools:context="com.baihuodasha.bhds.activity.myself.receiveraddress.ActivityNewAddress"
    >
  <include layout="@layout/activity_base_title"/>
  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm020"
      android:background="@color/address_divide"
      />
  <RelativeLayout
      android:id="@+id/rl_myself_newaddress_location"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm090"
      android:background="@color/white"
      >

    <TextView
        android:id="@+id/tv_myself_newaddress_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="省份、城市、区县"
        android:textColor="@color/colorText2"
        android:textSize="@dimen/dm026"
        />

  </RelativeLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_marginLeft="12dp"
      android:background="@color/login_hx"
      />
  <RelativeLayout
      android:id="@+id/rl_myself_newaddress_name"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm090"
      android:background="@color/white"
      >

    <TextView
        android:id="@+id/tv_myself_newaddress_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="12dp"
        android:text="姓名:"
        android:textColor="@color/colorText2"
        android:textSize="@dimen/dm026"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/et_myself_newaddress_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/tv_myself_newaddress_name"
        android:background="@null"
        android:hint="详细地址，如小区、街道、楼牌号等"
        android:maxLength="8"
        android:singleLine="true"
        android:textColor="#333333"
        android:textColorHint="@color/colorText2"
        android:textSize="15sp"
        />


  </RelativeLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_marginLeft="12dp"
      android:background="@color/login_hx"
      />
  <RelativeLayout
      android:id="@+id/rl_myself_newaddress_particularlocation"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm090"
      android:background="@color/white"
      >

    <TextView
        android:id="@+id/tv_myself_newaddress_particularlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="12dp"
        android:text="姓名:"
        android:textColor="@color/colorText2"
        android:textSize="@dimen/dm026"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/et_myself_newaddress_particularlocation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/tv_myself_newaddress_particularlocation"
        android:background="@null"
        android:hint="输入收货人姓名(中文)"
        android:maxLength="8"
        android:singleLine="true"
        android:textColor="#333333"
        android:textColorHint="@color/colorText2"
        android:textSize="15sp"
        />

  </RelativeLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_marginLeft="12dp"
      android:background="@color/login_hx"
      />
  <RelativeLayout
      android:id="@+id/rl_myself_newaddress_phone"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm090"
      android:background="@color/white"
      >

    <TextView
        android:id="@+id/tv_myself_newaddress_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="12dp"
        android:text="收件人姓名"
        android:textColor="@color/colorText2"
        android:textSize="@dimen/dm026"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/et_myself_newaddress_phone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/tv_myself_newaddress_phone"
        android:background="@null"
        android:inputType="phone"
        android:hint="手机号码"
        android:maxLength="11"
        android:singleLine="true"
        android:textColor="#333333"
        android:textColorHint="@color/colorText2"
        android:textSize="15sp"
        />
  </RelativeLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm080"
      android:layout_marginTop="@dimen/dm040"
      android:gravity="center"
      >
    <CheckBox
        android:id="@+id/ck_myself_newaddress_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/check_login_bg"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:paddingLeft="@dimen/dm012"
        android:paddingTop="@dimen/dm040"
        >
    </CheckBox>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置为默认地址"
        android:textColor="@color/colorText"
        android:textSize="@dimen/dm028"
        />
  </LinearLayout>
</LinearLayout>
