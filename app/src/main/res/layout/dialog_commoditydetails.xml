<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#03000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/dm450"
        android:layout_height="@dimen/dm300"
        android:background="@drawable/dialog_del_shape">
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除历史记录？"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dm080"
            android:layout_above="@+id/line"
            android:textColor="@color/blackText"
            android:textSize="@dimen/dm028"/>
        <View
            android:id="@+id/line"
            android:layout_above="@+id/ll_botton"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/login_hx"
            />
        <LinearLayout
            android:id="@+id/ll_botton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="取消"
                android:layout_weight="1"
                android:textColor="@color/blackText"
                android:textSize="@dimen/dm028"
                android:gravity="center"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/login_hx"/>
            <TextView
                android:id="@+id/yes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="确定"
                android:layout_weight="1"
                android:textColor="@color/blackText"
                android:textSize="@dimen/dm028"
                android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>