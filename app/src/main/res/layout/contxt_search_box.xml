<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
  <RelativeLayout
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:background="@color/titleBar"
      android:focusable="true"
      android:focusableInTouchMode="true"
      >

    <ImageView
        android:id="@+id/title_return"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dm020"

        android:src="@mipmap/search_dashalogo"
        android:visibility="visible"
        />

    <LinearLayout
        android:id="@+id/lin_seach"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dm016"
        android:layout_marginRight="@dimen/dm016"
        android:layout_toLeftOf="@+id/img_message"
        android:layout_toRightOf="@+id/title_return"
        android:background="@drawable/home_shearch_frame"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="8dp"
          android:src="@mipmap/search_light"
          />

      <TextView
          android:id="@+id/search_con"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:background="@null"
          android:gravity="center"
          android:imeOptions="actionSearch"
          android:paddingLeft="4dp"
          android:singleLine="true"
          android:text="输入您要的商品名称"
          android:textColor="@color/colorText"
          android:textSize="15sp"
          />


    </LinearLayout>
    <ImageView
        android:id="@+id/img_message"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/dm020"
        android:src="@mipmap/messange"
        android:visibility="visible"
        />
  </RelativeLayout>

</LinearLayout>