            android:layout_height="wrap_content"
            >
          <com.youth.banner.Banner
              android:id="@+id/ba_commodity_details_banner"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dm600"
              android:visibility="visible"
              />
          <TextView
              android:id="@+id/tv_commodity_details_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/ba_commodity_details_banner"
              android:layout_marginLeft="@dimen/dm030"
              android:layout_marginTop="@dimen/dm032"
              android:text="纯色dsda"
              android:textColor="@color/black"
              android:textSize="@dimen/dm034"
              />
          <TextView
              android:id="@+id/tv_commodity_details_presentation"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tv_commodity_details_title"
              android:layout_marginLeft="@dimen/dm030"
              android:layout_marginTop="@dimen/dm016"
              android:text="纯色dsda"
              android:textColor="@color/colorText2"
              android:textSize="@dimen/dm022"
              />
          <LinearLayout
              android:id="@+id/ll_commodity_details_presentation"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tv_commodity_details_presentation"
              android:layout_marginTop="@dimen/dm022"
              android:gravity="center"
              >
            <TextView
                android:id="@+id/tv_commodity_details_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm030"
                android:text="纯色dsda"
                android:textColor="@color/price"
                android:textSize="@dimen/dm048"
                />
            <TextView
                android:id="@+id/tv_commodity_details_post"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dm048"
                android:layout_marginLeft="@dimen/dm030"
                android:background="@drawable/home_recommendation_item"
                android:gravity="center"
                android:paddingLeft="@dimen/dm015"
                android:paddingRight="@dimen/dm015"
                android:text="包邮"
                android:textColor="@color/white"
                android:textSize="@dimen/dm026"
                />
            <TextView
                android:id="@+id/tv_commodity_details_integral"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dm048"
                android:layout_marginLeft="@dimen/dm010"
                android:background="@drawable/home_recommendation_item"
                android:gravity="center"
                android:paddingLeft="@dimen/dm015"
                android:paddingRight="@dimen/dm015"
                android:text="送499积分"
                android:textColor="@color/white"
                android:textSize="@dimen/dm026"
                />
          </LinearLayout>

          <TextView
              android:id="@+id/tv_commodity_details_oldpricetext"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/ll_commodity_details_presentation"
              android:layout_marginLeft="@dimen/dm030"
              android:layout_marginTop="@dimen/dm012"
              android:text="价格："
              android:textColor="@color/colorText"
              android:textSize="@dimen/dm024"
              />
