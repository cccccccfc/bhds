            android:id="@+id/shoping_selector"
            android:layout_width="@dimen/dm268"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >
          <TextView
              android:id="@+id/tv_commodity_details_menus_service"
              android:layout_width="@dimen/dm134"
              android:layout_height="match_parent"
              android:drawableTop="@mipmap/service"
