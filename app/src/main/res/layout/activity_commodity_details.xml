                <com.baihuodasha.bhds.utils.XCRoundImageView
                    android:id="@+id/iv_commodity_details_evaluate_headportrait"
                    android:layout_width="@dimen/dm072"
                    android:layout_height="@dimen/dm072"
                    android:gravity="center"
                    android:src="@mipmap/bhds_recommend2"
                    />
                <TextView
                    android:id="@+id/tx_commodity_details_evaluate_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dm030"
                    android:text="名字"
                    android:textSize="@dimen/dm030"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dm032"
                    >
                  <ImageView
                      android:id="@+id/iv_commodity_details_evaluate_xing1"
                      android:layout_width="@dimen/dm024"
                      android:layout_height="@dimen/dm024"
                      android:src="@mipmap/collection_un"
                      />
                  <ImageView
                      android:id="@+id/iv_commodity_details_evaluate_xing2"
                      android:layout_width="@dimen/dm024"
                      android:layout_height="@dimen/dm024"
                      android:layout_marginLeft="@dimen/dm010"
                      android:src="@mipmap/collection_un"
                      />
                  <ImageView
                      android:id="@+id/iv_commodity_details_evaluate_xing3"
                      android:layout_width="@dimen/dm024"
                      android:layout_height="@dimen/dm024"
                      android:layout_marginLeft="@dimen/dm010"
                      android:src="@mipmap/collection_un"
                      />
                  <ImageView
                      android:id="@+id/iv_commodity_details_evaluate_xing4"
                      android:layout_width="@dimen/dm024"
                      android:layout_height="@dimen/dm024"
                      android:layout_marginLeft="@dimen/dm010"
                      android:src="@mipmap/collection_un"
                      />
                  <ImageView
                      android:id="@+id/iv_commodity_details_evaluate_xing5"
                      android:layout_width="@dimen/dm024"
                      android:layout_height="@dimen/dm024"
                      android:layout_marginLeft="@dimen/dm010"
                      android:background="@mipmap/collection_un"
                      />
                </LinearLayout>
              </LinearLayout>
              <TextView
                  android:id="@+id/tx_commodity_details_evaluate_info"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/dm140"
                  android:layout_marginRight="@dimen/dm030"
                  android:lineSpacingMultiplier="1.2"
                  android:maxLength="100"
                  android:ellipsize="end"
                  android:text="试测试试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试"
                  android:textColor="@color/blackText"
                  android:textSize="@dimen/dm024"
                  />
              <LinearLayout
                  android:id="@+id/ll_commodity_details_evaluate_img"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dm128"
                  android:layout_marginLeft="@dimen/dm140"
                  android:layout_marginRight="@dimen/dm020"
                  android:layout_marginTop="@dimen/dm020"
                  >
                <ImageView
                    android:layout_width="@dimen/dm128"
                    android:layout_height="@dimen/dm128"
                    android:src="@mipmap/img_bhds_special1"
                    />
                <ImageView
                    android:layout_width="@dimen/dm128"
                    android:layout_height="@dimen/dm128"
                    android:layout_marginLeft="@dimen/dm010"
                    android:src="@mipmap/img_bhds_special1"
                    />
                <ImageView
                    android:layout_width="@dimen/dm128"
                    android:layout_height="@dimen/dm128"
                    android:layout_marginLeft="@dimen/dm010"
                    android:src="@mipmap/img_bhds_special1"
                    android:visibility="visible"
                    />
                <ImageView
                    android:id="@+id/iv_commodity_details_evaluate_more"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm128"

                    android:layout_marginLeft="@dimen/dm010"
                    android:background="@drawable/details_evaluate_more"
                    android:paddingBottom="@dimen/dm053"
                    android:paddingTop="@dimen/dm053"
                    android:src="@mipmap/more"
                    />
              </LinearLayout>
            </LinearLayout>
          </RelativeLayout>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="@dimen/dm016"
              android:background="#EEEEEE"
              />
          <RelativeLayout
              android:id="@+id/rl_commodity_details_info"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dm180"

              >
