      android:layout_height="@dimen/dm075"
      android:background="@color/titleBar"
      >

    <ImageView
        android:id="@+id/iv_base_backto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dm020"
        android:src="@mipmap/back_x"
        />
    <ImageView
        android:id="@+id/iv_base_back"
        android:layout_width="@dimen/dm100"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        />
    <LinearLayout
        android:layout_width="@dimen/dm240"
        android:layout_height="@dimen/dm054"
        android:layout_centerInParent="true"
        android:gravity="center"
        >
      <TextView
          android:id="@+id/tv_base_shop"
          android:layout_width="@dimen/dm120"
          android:layout_height="match_parent"
          android:background="@drawable/selector_shop_details_left"
          android:gravity="center"
          android:text="商品"
          android:textColor="@color/white"
          android:textSize="@dimen/dm028"
          />
      <TextView
          android:id="@+id/tv_base_details"
          android:layout_width="@dimen/dm120"
          android:layout_height="match_parent"
          android:background="@drawable/selector_shop_details_right"
          android:gravity="center"
          android:text="详情"
          android:textColor="@color/white"
          android:textSize="@dimen/dm028"
          />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_base_car"
        android:layout_width="@dimen/dm038"
        android:layout_height="@dimen/dm038"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dm032"
        android:layout_toLeftOf="@+id/iv_base_share"
        android:src="@mipmap/shopping_basket"
        android:visibility="visible"
        />
    <ImageView
        android:id="@+id/iv_base_share"
        android:layout_width="@dimen/dm040"
        android:layout_height="@dimen/dm040"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dm020"
        android:src="@mipmap/share"
        android:visibility="visible"
        />

  </RelativeLayout>


  <RelativeLayout
