              android:layout_width="@dimen/dm134"
              android:layout_height="match_parent"
              android:drawableTop="@mipmap/collection_up"
              android:gravity="center"
              android:paddingTop="@dimen/dm010"
              android:text="收藏"
              android:textColor="@color/colorText2"
              android:textSize="@dimen/dm026"
              />
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/dm001"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            />
        <TextView
            android:id="@+id/tv_commodity_details_menus_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/black"
            android:textSize="@dimen/dm030"
            />

        <TextView
            android:id="@+id/tv_commodity_details_menus_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@color/full_add"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:textSize="@dimen/dm030"
