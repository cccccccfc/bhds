            <TextView
                android:id="@+id/tv_commodity_details_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm030"
                android:text="服务:"
                android:textColor="@color/colorText2"
                android:textSize="@dimen/dm024"
                />
            <LinearLayout
                android:id="@+id/ll_service1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm040"
                android:layout_toRightOf="@+id/tv_commodity_details_service"
                android:gravity="center"
                >
              <TextView
                  android:layout_width="@dimen/dm010"
                  android:layout_height="@dimen/dm010"
                  android:background="@drawable/radius"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/dm020"
                  android:text="全场免邮费"
                  android:textColor="@color/colorText"
                  android:textSize="@dimen/dm022"
                  />
              <TextView
                  android:layout_width="@dimen/dm010"
                  android:layout_height="@dimen/dm010"
                  android:layout_marginLeft="@dimen/dm080"
                  android:background="@drawable/radius"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/dm020"
                  android:layout_toRightOf="@+id/tv_commodity_details_service"
                  android:text="百货大厦自营品牌"
                  android:textColor="@color/colorText"
                  android:textSize="@dimen/dm022"
                  />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_service1"
                android:layout_marginLeft="@dimen/dm040"
                android:layout_marginTop="@dimen/dm020"
                android:layout_toRightOf="@+id/tv_commodity_details_service"
                android:gravity="center"
                >
              <TextView
                  android:layout_width="@dimen/dm010"
                  android:layout_height="@dimen/dm010"
                  android:background="@drawable/radius"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/dm020"
                  android:text="全场免邮费"
                  android:textColor="@color/colorText"
                  android:textSize="@dimen/dm022"
                  />
              <TextView
                  android:layout_width="@dimen/dm010"
                  android:layout_height="@dimen/dm010"
                  android:layout_marginLeft="@dimen/dm080"
                  android:background="@drawable/radius"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/dm020"
                  android:layout_toRightOf="@+id/tv_commodity_details_service"
                  android:text="百货大厦自营品牌"
                  android:textColor="@color/colorText"
                  android:textSize="@dimen/dm022"
                  />
            </LinearLayout>

          </RelativeLayout>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="@dimen/dm016"
              android:background="#EEEEEE"
              />
          <RelativeLayout
              android:id="@+id/rl_commodity_details_evaluate"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:paddingTop="@dimen/dm024"
              >
            <TextView
                android:id="@+id/tv_commodity_details_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm030"
                android:text="用户评价(1)"
                android:textColor="@color/black"
                android:textSize="@dimen/dm024"
                />
            <TextView
                android:id="@+id/tv_commodity_details_evaluate_seeall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dm030"
                android:text="用户评价(0)"
                android:textColor="@color/colorText2"
                android:textSize="@dimen/dm022"
                />
            <TextView
                android:id="@+id/tv_commodity_details_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dm080"
                android:text="还没有评论哦，第一个来评论吧"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dm024"
                android:visibility="gone"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_commodity_details_evaluate"
                android:layout_marginBottom="@dimen/dm032"
                android:layout_marginTop="@dimen/dm020"
                android:orientation="vertical"
                >
              <LinearLayout
