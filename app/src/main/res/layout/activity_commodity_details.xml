                android:text="选择商品规格属性"
                android:textSize="@dimen/dm026"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dm030"
                android:drawablePadding="@dimen/dm020"
                android:drawableRight="@mipmap/more"
                android:text=""
                android:textSize="@dimen/dm024"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm001"
                android:layout_alignParentBottom="true"
                android:background="#EEEEEE"
                />
          </RelativeLayout>
          <RelativeLayout
              android:id="@+id/rl_commodity_details_commodityparameter"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dm081"
              android:background="@color/white"
              android:gravity="center"
              >
            <TextView
                android:id="@+id/tv_commodity_details_commodityparameter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm040"
                android:text="查看商品参数"
                android:textSize="@dimen/dm026"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dm030"
                android:drawablePadding="@dimen/dm020"
                android:drawableRight="@mipmap/more"
                android:text=""
                android:textSize="@dimen/dm024"
                />

          </RelativeLayout>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="@dimen/dm016"
              android:background="#EEEEEE"
              />
          <RelativeLayout
              android:id="@+id/rl_commodity_details_service"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:paddingBottom="@dimen/dm030"
              android:paddingTop="@dimen/dm030"
