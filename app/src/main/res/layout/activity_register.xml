<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
  <include layout="@layout/activity_base_title"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm081"
      android:orientation="horizontal"
      android:weightSum="2"
      >

    <TextView
        android:id="@+id/tv_select_register_phone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="手机注册"
        android:textSize="@dimen/dm028"
        />

    <TextView
        android:id="@+id/tv_select_register_email"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="邮箱注册"
        android:textSize="@dimen/dm028"
        />

  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:weightSum="2"

      >
    <TextView
        android:id="@+id/tv_select_register_phone_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm003"
        android:layout_weight="1"
        android:background="@color/titleBar"
        />
    <TextView
        android:id="@+id/tv_select_register_email_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm003"
        android:layout_weight="1"
        />
  </LinearLayout>
  <LinearLayout
      android:id="@+id/ll_register_name"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm080"
      android:layout_marginLeft="@dimen/dm040"
      android:layout_marginRight="@dimen/dm040"
      android:layout_marginTop="@dimen/dm090"
      android:orientation="horizontal"
      >
    <EditText
        android:id="@+id/et_register_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dm020"
        android:background="@null"
        android:hint="请输入您的账户名"
        android:textColorHint="@color/colorText"
        android:textSize="@dimen/dm026"
        />
  </LinearLayout>
  <TextView
      android:layout_width="@dimen/dm530"
      android:layout_height="@dimen/dm001"
      android:layout_gravity="center"
      android:background="#f4f4f4"
      />
  <LinearLayout
      android:id="@+id/ll_register_phone"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm080"
      android:layout_marginLeft="@dimen/dm040"
      android:layout_marginRight="@dimen/dm040"
      android:orientation="horizontal"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dm020"
        android:gravity="center"
        android:text="+86"
        android:textColor="@color/blackText"
        android:textSize="@dimen/dm030"
        />
    <EditText
        android:id="@+id/et_register_phone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dm020"
        android:background="@null"
        android:hint="请输入您的手机号"
        android:inputType="number"
        android:textColorHint="@color/colorText"
        android:textSize="@dimen/dm026"
        />
  </LinearLayout>
  <LinearLayout
      android:id="@+id/ll_register_email"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm080"
      android:layout_marginLeft="@dimen/dm040"
      android:layout_marginRight="@dimen/dm040"
      android:orientation="horizontal"
      android:visibility="gone"
      >
    <EditText
        android:id="@+id/et_register_email"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dm020"
        android:background="@null"
        android:hint="请输入您的邮箱"
        android:textColorHint="@color/colorText"
        android:textSize="@dimen/dm026"
        />
  </LinearLayout>
  <TextView
      android:layout_width="@dimen/dm530"
      android:layout_height="@dimen/dm001"
      android:layout_gravity="center"
      android:background="#f4f4f4"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm080"
      android:layout_marginLeft="@dimen/dm040"
      android:layout_marginRight="@dimen/dm040"
      android:layout_marginTop="@dimen/dm016"
      android:orientation="horizontal"
      >

    <EditText
        android:id="@+id/et_register_passport"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_weight="1"
        android:background="@null"
        android:hint="请输入您的密码(不少于6位)"
        android:inputType="textPassword"
        android:textColorHint="@color/colorText"
        android:textSize="@dimen/dm026"
        />
    <RelativeLayout
        android:id="@+id/rl_login_eye"
        android:layout_width="@dimen/dm055"
        android:layout_height="match_parent"
        >
      <ImageView
          android:id="@+id/img_login_eye"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:src="@mipmap/conceal"
          />
    </RelativeLayout>
  </LinearLayout>
  <TextView
      android:layout_width="@dimen/dm530"
      android:layout_height="@dimen/dm001"
      android:layout_gravity="center"
      android:background="#f4f4f4"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm080"
      android:layout_marginLeft="@dimen/dm040"
      android:layout_marginRight="@dimen/dm045"
      android:layout_marginTop="@dimen/dm016"
      android:orientation="horizontal"
      >

    <EditText
        android:id="@+id/et_register_yzm"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_weight="1"
        android:background="@null"
        android:hint="请输入您的验证码"
        android:inputType="number"
        android:textColorHint="@color/colorText"
        android:textSize="@dimen/dm026"
        />

    <RelativeLayout
        android:id="@+id/rl_register_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/backgroud_bg_white"
        android:padding="@dimen/dm018"
        >
      <TextView
          android:id="@+id/tv_register_yzm"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:text="获取验证码"
          android:textColor="@color/blackText"
          android:textSize="@dimen/dm026"
          />
    </RelativeLayout>
  </LinearLayout>
  <TextView
      android:layout_width="@dimen/dm530"
      android:layout_height="@dimen/dm001"
      android:layout_gravity="center"
      android:background="#f4f4f4"
      />
  <LinearLayout
      android:id="@+id/ll_register_xieyi"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dm016"
      android:orientation="horizontal"
      android:visibility="gone"
      >
    <ImageView
        android:id="@+id/iv_register_select"
        android:layout_width="@dimen/dm035"
        android:layout_height="@dimen/dm035"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dm055"
        android:scaleType="fitXY"
        android:src="@drawable/icon_select"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dm015"
        android:text="同意使用XXXXXX用户使用协议书"
        android:textColor="@color/colorText"
        android:textSize="@dimen/dm024"
        />
  </LinearLayout>
  <RelativeLayout
      android:id="@+id/rl_register_login"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm080"
      android:layout_marginLeft="@dimen/dm040"
      android:layout_marginRight="@dimen/dm040"
      android:layout_marginTop="@dimen/dm045"
      android:background="@drawable/backgroud_button_app_color"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/dm034"
        />
  </RelativeLayout>
</LinearLayout>
