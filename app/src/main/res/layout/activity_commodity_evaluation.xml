<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.baihuodasha.bhds.activity.index.ActivityCommodityEvaluation"
    android:orientation="vertical"
    >
  <include layout="@layout/activity_base_title"/>
  <com.baihuodasha.bhds.utils.ScrollInterceptScrollView
      android:id="@+id/slcommdoity_evaluation_info"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="@dimen/dm075"
      android:layout_above="@+id/rl_commdoity_evaluation_confirm"
      >

      <android.support.v7.widget.RecyclerView
          android:id="@+id/rl_commdoity_evaluation_info"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          ></android.support.v7.widget.RecyclerView>
  </com.baihuodasha.bhds.utils.ScrollInterceptScrollView>
  <RelativeLayout
      android:id="@+id/rl_commdoity_evaluation_confirm"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm080"
      android:layout_alignParentBottom="true"
      android:background="@color/titleBar">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="提交评论"
        android:textColor="@color/white"
        android:textSize="@dimen/dm034"/>
  </RelativeLayout>
</RelativeLayout>
