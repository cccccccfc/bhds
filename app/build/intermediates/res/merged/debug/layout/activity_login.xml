<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
  <include layout="@layout/activity_base_title"/>
  <ImageView
      android:layout_width="@dimen/dm224"
      android:layout_height="@dimen/dm180"
      android:layout_gravity="center"
      android:layout_marginBottom="@dimen/dm040"
      android:layout_marginTop="@dimen/dm050"
      android:scaleType="fitXY"
      android:src="@mipmap/logo"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm080"
      android:layout_marginLeft="@dimen/dm040"
      android:layout_marginRight="@dimen/dm040"
      android:orientation="horizontal"
      >

    <EditText
        android:id="@+id/et_login_phone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dm020"
        android:background="@null"
        android:hint="请输入帐号/邮箱/手机号"

        android:textColorHint="@color/colorText"
        android:textSize="@dimen/dm030"
        />

  </LinearLayout>
  <TextView
      android:layout_width="@dimen/dm530"
      android:layout_height="@dimen/dm001"
      android:layout_gravity="center"
      android:background="#f4f4f4"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm080"
      android:layout_marginLeft="@dimen/dm040"
      android:layout_marginRight="@dimen/dm040"
      android:layout_marginTop="@dimen/dm016"
      android:orientation="horizontal"
      >
    <EditText
        android:id="@+id/et_login_passport"
        android:layout_width="@dimen/dm480"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dm020"
        android:background="@null"
        android:hint="请输入账号密码"
        android:inputType="textPassword"
        android:textColorHint="@color/colorText"
        android:textSize="@dimen/dm030"
        />
    <RelativeLayout
        android:id="@+id/rl_login_eye"
        android:layout_width="@dimen/dm055"
        android:layout_height="match_parent"
        >
      <ImageView
          android:id="@+id/img_login_eye"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:layout_centerInParent="true"
          android:src="@mipmap/conceal"
          />
    </RelativeLayout>

  </LinearLayout>
  <TextView
      android:layout_width="@dimen/dm530"
      android:layout_height="@dimen/dm001"
      android:layout_gravity="center"
      android:background="#f4f4f4"
      />
  <RelativeLayout
      android:id="@+id/rl_login_login"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm080"
      android:layout_marginLeft="@dimen/dm040"
      android:layout_marginRight="@dimen/dm040"
      android:layout_marginTop="@dimen/dm045"
      android:background="@drawable/backgroud_button_app_color"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="立即登录"
        android:textColor="@color/white"
        android:textSize="@dimen/dm034"
        />
  </RelativeLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/dm020"
      android:layout_marginRight="@dimen/dm040"
      android:layout_marginTop="@dimen/dm040"
      android:orientation="horizontal"
      >
    <CheckBox
        android:id="@+id/img_full_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm030"
        android:button="@drawable/check_login_bg"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:minWidth="30dp"
        android:minHeight="@dimen/dm040"
        >

    </CheckBox>
    <TextView
        android:layout_width="@dimen/dm200"
        android:layout_height="@dimen/dm080"
        android:text="记住密码"
        android:textColor="@color/colorText"
        android:textSize="@dimen/dm028"
        />
    <TextView
        android:id="@+id/tv_login_register"
        android:layout_width="@dimen/dm120"
        android:layout_height="@dimen/dm080"
        android:layout_marginRight="@dimen/dm020"
        android:gravity="right"
        android:text="去注册"
        android:textColor="@color/colorText"
        android:textSize="@dimen/dm028"
        />
    <TextView
        android:layout_width="@dimen/dm001"
        android:layout_height="@dimen/dm020"
        android:background="@color/colorText"
        android:layout_marginTop="@dimen/dm005"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/tv_login_forget"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dm080"
        android:layout_marginLeft="@dimen/dm020"
        android:text="忘记密码"
        android:textColor="@color/colorText"
        android:textSize="@dimen/dm028"
        />
  </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm200"
      android:layout_marginLeft="@dimen/dm040"
      android:layout_marginRight="@dimen/dm040"
      android:orientation="vertical"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <View
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:background="@color/gray"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="还可以用以下方式登录"
          android:textColor="@color/gray"
          android:textSize="@dimen/dm028"
          />
      <View
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:background="@color/gray"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        >
      <ImageView
          android:id="@+id/iv_login_wx"
          android:layout_width="@dimen/dm080"
          android:layout_height="@dimen/dm080"
          android:layout_gravity="center"
          android:layout_marginLeft="@dimen/dm040"
          android:layout_marginRight="@dimen/dm040"
          android:src="@mipmap/icon_wx"
          />
      <View
          android:layout_width="@dimen/dm040"
          android:layout_height="match_parent"
          />
      <ImageView
          android:id="@+id/iv_login_qq"
          android:layout_width="@dimen/dm080"
          android:layout_height="@dimen/dm080"
          android:layout_gravity="center"
          android:layout_marginLeft="@dimen/dm040"
          android:layout_marginRight="@dimen/dm040"
          android:src="@mipmap/icon_qq"
          />

    </LinearLayout>
  </LinearLayout>
</LinearLayout>
